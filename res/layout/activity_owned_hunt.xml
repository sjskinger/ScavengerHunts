<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10sp"
    tools:context=".OwnedHuntActivity" >

    <EditText
        android:id="@+id/hunt_name_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent"
        android:hint="Name Your Hunt"
        android:inputType="text" >
    </EditText>

    <TextView
        android:id="@+id/time_remaining_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hunt_name_text"
        android:layout_centerHorizontal="true" />

    <ExpandableListView
        android:id="@+id/expandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/time_remaining_text"
        android:cacheColorHint="#00000000"
        android:fitsSystemWindows="false"
        android:listSelector="@android:color/transparent"
        android:scrollbars="vertical"
        android:transcriptMode="disabled" >
    </ExpandableListView>

    <EditText
        android:id="@+id/add_participant_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/expandableListView"
        android:layout_marginTop="20sp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="text"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/add_participant_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_participant_box"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        android:text="Add New Participant" />

    <Button
        android:id="@+id/add_objective_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_participant_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5sp"
        android:text="Create New Objective" />

    <Button
        android:id="@+id/set_time_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_objective_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:text="Set Duration" />

    <Button
        android:id="@+id/start_hunt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_time_button"
        android:layout_marginLeft="45dp"
        android:text="Start Hunt" />

    <Button
        android:id="@+id/delete_hunt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/start_hunt_button"
        android:layout_alignBottom="@+id/start_hunt_button"
        android:layout_below="@+id/set_time_button"
        android:layout_marginLeft="42dp"
        android:layout_toRightOf="@+id/start_hunt_button"
        android:text="Delete Hunt" />

</RelativeLayout>